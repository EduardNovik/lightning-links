{% style %}
  .textBlock h2 {
    font-family: 'Roboto', sans-serif;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 20px;
  }
  .textBlock h3 {
    font-size: 22px;
    font-weight: 700;
    color: var(--grigio-60);
    margin-bottom: 20px;
    font-family: 'Roboto', sans-serif;
  }
  .textBlock p + * {
    margin-top: 20px;
  }
  .textBlock p + p {
    margin-top: 8px;
  }
  .textBlock p {
    color: var(--grigio-60);
  }

  .textBlock ul {
    padding-left: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
  }

  .textBlock ul + * {
    margin-top: 20px;
  }
  .textBlock ul li {
    font-family: 'Roboto', sans-serif;
  }

  @media (max-width: 768px) {
    .textBlock ul {
      padding-left: 20px;
    }
  }
{% endstyle %}

<div class="mb-5 md:mb-10 textBlock container">
  {% if section.settings.rich_text != blank %}
    <div class="rich-text">
      {{ section.settings.rich_text }}
    </div>
  {% endif %}
</div>
{% schema %}
{
  "name": "Text Block",
  "settings": [
    {
      "type": "richtext",
      "id": "rich_text",
      "label": "Rich Text"
    }
  ],
  "presets": [
    {
      "name": "Text Block",
      "category": "Text"
    }
  ]
}
{% endschema %}

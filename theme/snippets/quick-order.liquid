<div
  id="quick-order-popup"
  class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 z-50 hidden items-center justify-center"
>
  <div class=" bg-white p-4 z-50 w-full max-w-[750px] m-5">
    <header class="flex items-center gap-3 justify-between mb-5">
      <h5 class="font-roboto">Quick Order</h5>
      <button id="closeQuickOrderPopupButton" class="min-w-5">
        {% render 'icon-close' %}
      </button>
    </header>
    {% form 'contact' %}
      <div class="mb-5">
        <label class="uppercase text-grigio-60 mb-2 block">Name</label>
        <input type="text" name="contact[name]">
      </div>

      <div class="mb-5">
        <label class="uppercase text-grigio-60 mb-2 block">Phone Number</label>
        <input type="tel" name="contact[phone]">
      </div>

      <div class="mb-5">
        <label class="uppercase text-grigio-60 mb-2 block">Email</label>
        <input type="email" name="contact[email]">
      </div>

      <div class="mb-5">
        <label class="uppercase text-grigio-60 mb-2 block">Text field</label>
        <textarea class="min-h-24" name="contact[message]"></textarea>
      </div>

      <div class="grid grid-cols-2 gap-2 ">
        <button
          id="cancelButtonQuickOrderPopup"
          type="button"
          class=" border border-grigio-40"
        >
          cancel
        </button>
        <button
          id="sendButtonInQuickOrderPopup"
          type="submit"
          class="bg-grigio-100 text-white uppercase p-2 w-full font-extrabold"
        >
          send
        </button>
      </div>
    {% endform %}
  </div>
</div>

<script>
  document.getElementById('closeQuickOrderPopupButton').addEventListener('click', () => {
    document.getElementById('quick-order-popup').classList.toggle('hidden')
    document.getElementById('quick-order-popup').classList.toggle('flex')
    document.querySelector("body").classList.toggle("overflow-hidden");
  })
  document.getElementById('cancelButtonQuickOrderPopup').addEventListener('click', () => {
    document.getElementById('quick-order-popup').classList.toggle('hidden')
    document.getElementById('quick-order-popup').classList.toggle('flex')
    document.querySelector("body").classList.toggle("overflow-hidden");
  })
</script>
<div
  id="quick-order-popup"
  class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 z-50 hidden items-center justify-center"
>
  <div class=" bg-white p-4 z-50 w-full max-w-[750px] m-5">
    <header class="flex items-center gap-3 justify-between mb-5">
      <h5 class="font-roboto">Quick Order</h5>
      <button id="closeQuickOrderPopupButton" class="min-w-5">
        {% render 'icon-close' %}
      </button>
    </header>
    {% form 'contact' %}
      <div class="mb-5">
        <label for="name" class="block text-sm font-medium text-gray-600">Name</label>
        <input type="text" id="name" name="contact[name]" class="block w-full border-gray-300 shadow-sm h-12 border-2 bg-white">
      </div>

      <div class="mb-5">
        <label for="phone" class="block text-sm font-medium text-gray-600">Phone number</label>
        <input type="tel" id="phone" name="contact[phone]" class="block w-full border-gray-300 shadow-sm h-12 border-2 bg-white">
      </div>

      <div class="mb-5">
        <label for="email" class="block text-sm font-medium text-gray-600">Email</label>
        <input type="email" id="email" name="contact[email]" class="block w-full border-gray-300 shadow-sm h-12 border-2 bg-white">
      </div>

      <div class="mb-5">
        <label for="message" class="block text-sm font-medium text-gray-600">Text field</label>
        <textarea id="message" name="contact[message]" class="block w-full border-gray-300 shadow-sm h-24 border-2 bg-white"></textarea>
      </div>

      <div class="grid grid-cols-2 gap-2 ">
        <button
          id="cancelButtonQuickOrderPopup"
          type="button"
          class="py-2 px-4 border  w-full border-gray-300 text-sm font-medium text-gray-700 bg-white hover:bg-gray-100"
        >
          CANCEL
        </button>
        <button
          id="sendButtonInQuickOrderPopup"
          type="submit"
           class="py-3 px-4 bg-black w-full text-white text-sm font-medium hover:bg-gray-800"
        >
          SEND
        </button>
      </div>
    {% endform %}
  </div>
</div>

<script>
  document.getElementById('closeQuickOrderPopupButton').addEventListener('click', () => {
    document.getElementById('quick-order-popup').classList.toggle('hidden')
    document.getElementById('quick-order-popup').classList.toggle('flex')
    document.querySelector("body").classList.toggle("overflow-hidden");
  })
  document.getElementById('cancelButtonQuickOrderPopup').addEventListener('click', () => {
    document.getElementById('quick-order-popup').classList.toggle('hidden')
    document.getElementById('quick-order-popup').classList.toggle('flex')
    document.querySelector("body").classList.toggle("overflow-hidden");
  })
</script>




<div
  id="successPopup"
  class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 justify-center items-center hidden z-60"
>
  <div class="bg-grigio-0 p-10 flex flex-col items-center gap-10 w-96 m-2">
    <h5 class="font-roboto">Success</h5>
    <p class="text-grigio-60">Your message was send.</p>
    <button
      onclick="document.getElementById('successPopup').classList.add('hidden')
      document.getElementById('successPopup').classList.remove('flex')"
      class="text-grigio-0 bg-grigio-100 block p-6 w-full"
    >
      OK
    </button>
  </div>
</div>

<div
  id="for-partners-popup"
  class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 z-50 hidden items-center justify-center"
>
  <div class=" bg-white p-6 z-50 w-full max-w-[750px]">
    <div class="flex items-center gap-3 justify-between mb-5">
      <p class="font-roboto">Want to become a partner? Let's get linked up!</p>
      <button id="closePopupButton" class="min-w-5">
        {% render 'icon-close' %}
      </button>
    </div>
    {% form 'contact' class: "flex flex-col gap-9" %}
      <div>
        <label class="block text-sm font-medium text-gray-600">Name</label>
        <input type="text" name="contact[name]" class="block w-full border-gray-300 shadow-sm h-12 border-2 bg-white">
      </div>

      <div>
        <label class="uppercase text-grigio-60 mb-2 block">Phone Number</label>
        <input type="tel" name="contact[phone]" class="block w-full border-gray-300 shadow-sm h-12 border-2 bg-white">
      </div>

      <div>
        <label class="uppercase text-grigio-60 mb-2 block">Email</label>
        <input type="email" name="contact[email]" class="block w-full border-gray-300 shadow-sm h-12 border-2 bg-white">
      </div>

      <div>
        <label class="uppercase text-grigio-60 mb-2 block">Text field</label>
         <textarea name="contact[message]" class="block w-full border-gray-300 shadow-sm h-24 border-2 bg-white"></textarea>
      </div>

      <div class="flex justify-between gap-4">
        <button
          id="cancelButton"
          type="button"
           class="py-2 px-4 border  w-full border-gray-300 text-sm font-medium text-gray-700 bg-white hover:bg-gray-100"
        >
          CANCEL
        </button>
        <button
          id="sendButtonInForPartnersPopup"
          type="submit"
          class="py-3 px-4 bg-black w-full text-white text-sm font-medium hover:bg-gray-800"
        >
          SEND
        </button>
      </div>
    {% endform %}
  </div>
</div>
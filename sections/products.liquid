<section class="container mx-auto ">
  <h5 class="section-header mb-12">
    {{ section.settings.title }}
  </h5>

  <div class="productsContainer grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% render 'product-item', product: product %}
    {% endfor %}
  </div>
  {% comment %} <div>
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% render 'buy-popup-custom', product: product %}
    {% endfor %}
  </div> {% endcomment %}
   {% for product in collections.all.products %}
    {% comment %} {{ product.title | link_to: product.url }} {% endcomment %}
    {% render 'product-item', product: product %}
  {% endfor %}
  <a
    href="/collections/all"
    class="buttonWithLine block w-fit mx-auto relative py-2 px-3 border border-grigio-40 uppercase font-extrabold"
  >
    Show all
  </a>
</section>

{% schema %}
{
  "name": "Recommended product",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Products"
    }
  ],
  "presets": [
    {
      "name": "Recommended product"
    }
  ],

  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product item"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Buy popup custom"
        }
      ]
    }
  ]
}
{% endschema %}

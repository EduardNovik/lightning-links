<div id="advantage_fuel" class="flex md:flex-row flex-col gap-8 container mt-[60px]">
  <div class="flex flex-col items-center justify-center md:w-1/2 h-auto w-full gap-5">
    <h1 class="mb-8 text-4xl">{{ section.settings.text_fuel1 }}</h1>
    <p>{{ section.settings.text_fuel2 }}</p>
    <p>{{ section.settings.text_fuel3 }}</p>
  </div>
  <img
    src="{{ section.settings.imageFuel| img_url: 'original'}}"
    alt="image fuel"
    class="imageFuel md:w-1/2 h-auto w-full">
</div>


{% schema %}
  {
    "name": "image-text-custom",
    "settings": [
      {
        "type": "text",
        "id": "text_fuel1",
        "label": "Text 1"
      },
      {
        "type": "text",
        "id": "text_fuel2",
        "label": "Text 2"
      },
      {
        "type": "text",
        "id": "text_fuel3",
        "label": "Text 3"
      },
      {
        "type": "image_picker",
        "id": "imageFuel",
        "label": "Image"
      }, {
        "type": "range",
        "id": "padding_top",
        "label": "Padding Top",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20
      }, {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding Bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20
      }
    ],
    "presets": [
      {
        "name": "Images Text Custom"
      }
    ]
  }
{% endschema %}